{
  "manifest_version": 2,
  "name": "Tab Mixer",
  "version": "0.0.1",
  "description": "Uma simples extens√£o para aumentar e diminuir o volume das abas!'",

  "browser_action": {
    "default_popup": "index.html"
  },
  "icons": {
    "225": "public/sound3.png"
  },
  "permissions": [
    "activeTab",
    "tab",
    "<all_urls>",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}